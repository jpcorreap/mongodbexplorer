<%- include("./head") %>

<p id="colNameMachete" style="visibility: hidden;"><%=colName%></p>

<h4>Database: <%=dbName%></h4>
<h4>Collection: <%=colName%></h4>
<h4>Here you are latest 20 records:</h4>
<div class="container">
  <table class="table table-bordered" id="records" style="visibility: hidden;">
    <thead
      class="thead-dark"
      id="recordsTableHead"
      style="text-align: center;"
    ></thead>
    <tbody id="recordsTableBody"></tbody>
  </table>

  <div class="card col-10" style="width: max-content; margin-top: 50px;">
    <div class="card-body">
      <h4 class="card-title">
        <strong>Insert a new record into <%=colName%> collection:</strong>
      </h4>
      <h6 class="card-subtitle mb-2 text-muted">
        Please fill next fields. Text will be parsed to a BSON file to store on
        <%=colName%> collection.
      </h6>
      <form action="" method="post">
        <div class="form-group">
          <div class="row">
            <label class="col">Insert input1</label>
            <input
              type="text"
              class="form-control col"
              id="input1"
              placeholder="Enter input1"
            />
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm">Insert input2</label>
          <input
            type="text"
            class="form-control"
            id="input2"
            placeholder="Enter input2"
          />
          <small class="form-text text-muted"
            >It's an array field. Please insert items separated by
            colons.</small
          >
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a>
    </div>
  </div>
</div>

<script src="/javascripts/fetch.js"></script>
<script>
  viewRecords();
</script>

<%- include("./closure") %>
